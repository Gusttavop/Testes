    function iniciarQuestoesSaude(isAutomatico = false){ registrarPausa("Sa√∫de"); executarLogicaQuestoesSaude(isAutomatico); }
    function realizarLogoff(isAutomatico = false){ executarLogicaLogoff(isAutomatico); }

